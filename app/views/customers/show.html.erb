<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Cell:</strong>
  <%= @customer.cell %>
</p>

<p>
  <strong>Address:</strong>
  <%= @customer.address %>
</p>

<table>
<th>Order Name</th><th>Quantity</th><th>Price</th>
<% @customer.orders.each do |my_orders| %>

    <tr>
    	<td><%= my_orders.order_name %></td><td><%= my_orders.qty %></td><td><%= my_orders.price %></td>
    </tr>
<% end %>

</table>



<%= link_to 'Edit', edit_customer_path(@customer) %> |
